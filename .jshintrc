{
  // See http://www.jshint.com/docs/options/ for all options

  // Enforcing options
  "bitwise": true, // No ^ (XOR), | (OR), etc
  "camelcase": true, // Forc all variables to use camelCase or UPPER_CASE
  "curly": true, // Always use braces around blocks
  "eqeqeq": true, // Use === and !== instead of == and !=
  "es3": false, // Don't need to work in legacy IE
  "forin": true, // Require loops to filter for hasOwnProperty
  "freeze": true, // Don't overwrite native object prototypes
  "immed": true, // Wrap immediate function invocations in parens
  "indent": 2, // Force consistent indentation
  "latedef": true, // Can only use vars after they've been declared
  "newcap": true, // Capitalize class names
  "noarg": true, // Can't use arguments.caller and arguments.callee
  "noempty": true, // No empty blocks
  "nonbsp": true, // Avoid funky characters
  "nonew": true, // Don't call consturctors only for the side effects
  "plusplus": false, // Allow ++ and --
  "quotmark": "single", // Use single quotes by preference
  "undef": true, // Must declare variables explicitly
  "unused": true, // Warn about unused variables
  "strict": false, // Don't require function-level strict mode
  "trailing": true, // No trailing whitespace
  "maxparams": 4, // For now?
  "maxdepth": 4, // Don't nest code too deeply
  "maxstatements": 40, // Avoid long functions
  "maxlen": 80, // Terminals 4eva

  // Relaxing options
  "asi": false, // Always use semi-colons
  "boss": false,
  "debug": true, // For development, allow debugger
  "eqnull": false,
  "esnext": false,
  "evil": false,
  "expr": false, // Avoid typo conditionals
  "funcscope": false,
  "gcl": true, // Google linter compat
  "globalstrict": true, // Use strict mode
  "iterator": false,
  "lastsemic": false,
  "laxbreak": false,
  "laxcomma": false,
  "loopfunc": false,
  "maxerr": 100, // Maximum errors before exiting
  "moz": false,
  "multistr": false,
  "notypeof": false,
  "proto": false,
  "scripturl": false,
  "smarttabs": false,
  "shadow": false,
  "sub": false,
  "supernew": false,
  "validthis": false,
  "noyield": false,

  // Environments
  "browser": true,
  "devel": true, // Debug only
  "node": true,

  // Legacy
  "nomen": false,
  "onevar": true,
  "passfail": false, // Don't stop on first error
  "white": false,

  // Custom globals
  "predef": []
}
