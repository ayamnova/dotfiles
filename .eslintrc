{
  "env": {
    "amd": true,
    "browser": true,
    "mocha": true,
    "node": true
  },
  // All rules documented here: http://eslint.org/docs/rules/
  "rules": {
    // Possible errors
    "no-cond-assign": 2,
    "no-console": 0,
    "no-constant-condition": 1,
    "no-comma-dangle": 2,
    "no-control-regex": 2,
    "no-debugger": 1,
    "no-dupe-keys": 1,
    "no-empty": 1,
    "no-empty-class": 1,
    "no-ex-assign": 2,
    "no-extra-boolean-cast": 1,
    "no-extra-parens": 1,
    "no-extra-semi": 1,
    "no-func-assign": 2,
    "no-inner-declarations": 2,
    "no-invalid-regexp": 2,
    "no-negated-in-lhs": 2,
    "no-obj-calls": 2,
    "no-regex-spaces": 2,
    "no-sparse-arrays": 1,
    "no-unreachable": 1,
    "use-isnan": 2,
    "valid-jsdoc": 1,
    "valid-typeof": 1,

    // Best practices
    "block-scoped-var": 1,
    "complexity": [1, 10],
    "consistent-return": 1,
    "curly": [2, "all"],
    "default-case": 1,
    "dot-notation": 1,
    "eqeqeq": 2,
    "guard-for-in": 1,
    "no-alert": 1,
    "no-caller": 2,
    "no-div-regex": 2,
    "no-else-return": 1,
    "no-empty-label": 2,
    "no-eq-null": 2,
    "no-eval": 2,
    "no-extend-native": 1,
    "no-fallthrough": 2,
    "no-floating-decimal": 2,
    "no-implied-eval": 2,
    "no-iterator": 2,
    "no-labels": 2,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-multi-str": 2,
    "no-native-reassign": 2,
    "no-new": 2,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-octal": 2,
    "no-octal-escape": 2,
    "no-proto": 2,
    "no-redeclare": 2,
    "no-return-assign": 2,
    "no-script-url": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-unused-expressions": 2,
    "no-warning-comments": [1, {
      "terms": ["todo", "fixme", "bug", "xxx"],
      "location": "start"
    }],
    "no-with": 2,
    "radix": 0,
    "wrap-iife": [2, "outside"],
    "yoda": "never",

    // Strict Mode
    "no-global-strict": 0,
    "no-extra-strict": 1,
    "strict": 1,

    // Variables
    "no-catch-shadow": 1,
    "no-delete-var": 2,
    "no-label-var": 2,
    "no-shadow": 2,
    "no-undef": 2,
    "no-undefined": 2,
    "no-undef-init": 2,
    "no-unused-vars": 0,
    "no-use-before-define": 0,

    // Node.js
    "handle-callback-err": 1,
    "no-mixed-requires": [1, true],
    "no-new-require": 2,
    "no-path-concat": 2,
    "no-process-exit": 1,
    "no-restricted-modules": [1],
    "no-restricted-modules": [1],
    "no-sync": 1,

    // Stylistic Issues
    "brace-style": [2, "stroustrup"],
    "camelcase": 1,
    "consistent-this": [1, "self"],
    "eol-last": 2,
    "func-names": 0,
    "func-style": [2, "expression"],
    "new-cap": 2,
    "new-parens": 2,
    "no-nested-ternary": 1,
    "no-array-constructor": 2,
    "no-lonely-if": 1,
    "no-new-object": 2,
    "no-spaced-func": 2,
    "no-ternary": 0,
    "no-trailing-spaces": 2,
    "no-underscore-dangle": 1,
    "no-unreachable": 2,
    "no-wrap-func": 0,
    "no-mixed-spaces-and-tabs": 2,
    "quotes": [1, "single", "avoid-escape"],
    "quote-props": 0,
    "semi": [2, "always"],
    "sort-vars": 1,
    "space-after-keywords": [2, "always"],
    "space-in-brackets": [2, "never"],
    "space-infix-ops": 2,
    "space-return-throw-case": 2,
    "space-unary-word-ops": 2,
    "max-nested-callbacks": [1, 4],
    "one-var": 1,
    "wrap-regex": 0,

    // Legacy
    "max-depth": [1, 4],
    "max-len": [1, 80, 2],
    "max-params": [0, 3],
    "max-statements": [0, 10],
    "no-bitwise": 1,
    "no-plusplus": 0

  }
}
