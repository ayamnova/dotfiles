# Common OSX settings, especially for Homebrew

# For Android to work via homebrew
export ANDROID_SDK_ROOT=/usr/local/opt/android-sdk

# Add NPM-installed items to path
export PATH=/usr/local/share/npm/bin:$PATH

# Prefer local bins before system, for homebrew
export PATH=/usr/local/bin:/usr/local/sbin:$PATH

# Use brew python
export PYTHONPATH=/usr/local/lib/python2.7/site-packages:$PYTHONPATH

# Bash completion for git, ack, etc
if [ -f `brew --prefix`/etc/bash_completion.d/git-completion.bash  ]; then
  . `brew --prefix`/etc/bash_completion.d/git-completion.bash
fi

if [ -f `brew --prefix`/etc/bash_completion.d/ack.bash_completion.bash  ]; then
  . `brew --prefix`/etc/bash_completion.d/ack.bash_completion.bash
fi

# MAC manipulators, via jashkenas
alias random_mac='sudo ifconfig en0 ether `openssl rand -hex 6 | sed "s/\(..\)/\1:/g; s/.$//"`'
alias restore_mac='sudo ifconfig en0 ether b8:8d:12:0b:30:30'
